{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <button class="btn btn-primary m-1"> 
                        <a style="color: white;" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    </button>
                    <button class="btn btn-secondary m-1"> 
                        <a style="color: white;" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button class="btn btn-primary m-1"> 
        <a style="color: white;" href="{{ path('app_user_new') }}">Create new</a>
    </button>
    <br><button class="btn btn-secondary m-1"> 
            <a style="color: white;" href="{{ path('app_home') }}">back to home</a>
        </button>

{% endblock %}
