{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    
    
    <button class="btn btn-primary m-1"> 
        <a style="color: white;" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
    </button>

    <br><button class="btn btn-secondary m-1">
        <a style="color: white;" href="{{ path('app_user_index') }}">back to list</a>
    </button>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
